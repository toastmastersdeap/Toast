@using Toast.Models
@model Toast.Models.ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
    ViewBag.Title = "Reset Password";
}

<div class="login-container">
    <div class="row">
        <div class="col-md-12">
            <div class="row text-center">
                <div class="col-md-12">
                    <div id="bootstrap_alerts">
                        @if (TempData.ContainsKey("flash"))
                        {
                            @Html.Partial("_Alert", TempData["flash"]);
                        }
                    </div>
                </div>
            </div>
            <div class="text-center m-b-md">
                <h3 class="font-bold">Reset your Password</h3>
            </div>
            <div class="hpanel">
                <div class="panel-body">
                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Code)
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-shadow" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-shadow" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-shadow" })
                        </div>
                        <input type="submit" value="Reset" class="font-bold btn btn-success btn-block" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}